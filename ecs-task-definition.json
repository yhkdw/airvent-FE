{
  "family": "airvent-nextjs",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::975950720014:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::975950720014:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "airvent-nextjs",
      "image": "975950720014.dkr.ecr.ap-northeast-2.amazonaws.com/airvent-nextjs:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/database-url-Rwb192"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/jwt-secret-XUYbJh"
        },
        {
          "name": "SMTP_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/smtp-host-wHIBcE"
        },
        {
          "name": "SMTP_PORT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/smtp-port-cyAgHt"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/smtp-user-FpEtwh"
        },
        {
          "name": "SMTP_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/smtp-password-Vcyr57"
        },
        {
          "name": "SMTP_FROM",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:975950720014:secret:airvent/smtp-from-FyQ3CS"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/airvent-nextjs",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3000/api/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1) }).on('error', () => process.exit(1))\" || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}
